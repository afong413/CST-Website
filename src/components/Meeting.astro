---
import type { CollectionEntry } from "astro:content"

interface Props {
  meeting: CollectionEntry<"meetings">
}

const { meeting } = Astro.props
const rendered = await meeting.render()
---

<a
  href={`/meetings/${meeting.id.split(".").slice(0, -1).join()}`}
  class="mt-12 text-2xl underline underline-offset-2"
>
  <h2 class="border-b border-z pb-2">{meeting.slug}</h2></a
>

<div class="ml-4 border-l border-z py-3 pl-4 text-xl">
  <div
    class="line-clamp-6 text-z-subtitle *:my-2 first:*:mt-0 last:*:mb-0 [&_h1]:font-bold [&_h1]:text-z"
  >
    <rendered.Content />
  </div>
</div>
